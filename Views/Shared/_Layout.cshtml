<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Themes/css")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

</head>
<style>
    .search {
        width: 500px;
        
    }
    .btn-search{
        
    }
</style>
<body>

    <div class="container">
        <div class="row row-cols-3">
            <div class="col-2 bg-black">
                <a href="#" class="navbar-brand" style= "font-size: 30px">Logo</a>
            </div>
            <div class="col-6 bg-danger">
                <form action="/" method="post" class="d-flex m-3">
                    <input class="search form-control rounded-0" type="text" name="name" value="" />
                    <button type="submit" class="btn-search btn btn-dark rounded-0">
                        <i class="bi bi-search"></i>
                    </button>
                </form>
            </div>
            <div class="col-4 bg-light d-flex text-center mt-3">
                <a href="#" class="flex-fill"><i class="bi bi-search me-1"></i>Hướng dẫn</a>
                <a href="#" class="flex-fill"><i class="bi bi-search me-1"></i>Video</a>
                <a href="#" class="flex-fill">
                    <span>Đăng nhập</span>
                </a>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
